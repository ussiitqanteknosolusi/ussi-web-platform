generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Setting {
  id        Int      @id @default(autoincrement())
  keyName   String   @unique @map("key_name")
  value     String   @db.Text
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("settings")
}

model Service {
  id              Int              @id @default(autoincrement())
  title           String
  slug            String           @unique
  description     String?          @db.Text
  metaDescription String?          @map("meta_description")
  heroImage       String?          @map("hero_image") // Hero banner image
  iconPath        String?          @map("icon_path")
  isActive        Boolean          @default(true) @map("is_active")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  features        ServiceFeature[]
  projects        Project[]
  products        Product[]
  @@map("services")
}

model Product {
  id            Int             @id @default(autoincrement())
  serviceId     Int             @map("service_id")
  name          String
  slug          String          @unique
  description   String?         @db.Text
  thumbnail     String?         // Product card thumbnail
  detailImage   String?         @map("detail_image") // Product detail page image
  features      Json?           // Array of feature strings
  isActive      Boolean         @default(true) @map("is_active")
  displayOrder  Int             @default(0) @map("display_order")
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  service       Service         @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  prices        ProductPrice[]

  @@map("products")
}

model ProductPrice {
  id            Int      @id @default(autoincrement())
  productId     Int      @map("product_id")
  name          String   // e.g. "License", "Monthly"
  price         Decimal  @db.Decimal(12, 2)
  features      Json?    // Optional features specific to this price tier
  whatsappUrl   String?  @map("whatsapp_url")
  isBestValue   Boolean  @default(false) @map("is_best_value")
  displayOrder  Int      @default(0) @map("display_order")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_prices")
}


model ServiceFeature {
  id          Int     @id @default(autoincrement())
  serviceId   Int?    @map("service_id")
  featureName String  @map("feature_name")
  description String? @map("feature_description") @db.Text
  service     Service? @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@map("service_features")
}

enum Industry {
  Koperasi
  BPR
  LKM
  Pesantren
  Lainnya
}

model Client {
  id          Int      @id @default(autoincrement())
  name        String
  industry    Industry @default(Koperasi)
  logoUrl     String?  @map("logo_url")
  testimonial String?  @db.Text
  isFeatured  Boolean  @default(false) @map("is_featured")
  createdAt   DateTime @default(now()) @map("created_at")
  users       User[]
  projects    Project[]

  @@map("clients")
}

enum Role {
  SUPERADMIN
  EDITOR
  SALES
  CLIENT_ADMIN
  CLIENT_USER
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(CLIENT_USER)
  clientId      Int?      @map("client_id")
  image         String?
  emailVerified DateTime? @map("email_verified")
  createdAt     DateTime  @default(now()) @map("created_at")
  client        Client?   @relation(fields: [clientId], references: [id])
  sessions      Session[]
  posts         Post[]

  @@map("users")
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique @map("session_token")
  userId       Int      @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

enum PostStatus {
  draft
  published
}

model Post {
  id              Int        @id @default(autoincrement())
  title           String
  slug            String     @unique
  content         String     @db.LongText
  excerpt         String?    @db.Text
  metaDescription String?    @map("meta_description")
  coverImage      String?    @map("cover_image")
  status          PostStatus @default(draft)
  
  authorId        Int?       @map("author_id")
  author          User?      @relation(fields: [authorId], references: [id])

  categoryId      Int?       @map("category_id")
  category        Category?  @relation(fields: [categoryId], references: [id])
  
  tags            Tag[]

  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @default(now()) @updatedAt @map("updated_at")

  @@map("posts")
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique
  description String?  @db.Text
  posts       Post[]
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("categories")
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  posts     Post[]

  @@map("tags")
}

enum InquiryStatus {
  New
  Processed
  Closed
}

model Inquiry {
  id          Int           @id @default(autoincrement())
  fullName    String        @map("full_name")
  email       String
  phone       String
  companyName String?       @map("company_name")
  message     String        @db.Text
  status      InquiryStatus @default(New)
  createdAt   DateTime      @default(now()) @map("created_at")

  @@map("inquiries")
}

model Team {
  id            Int     @id @default(autoincrement())
  name          String
  position      String
  photoUrl      String? @map("photo_url")
  orderPriority Int?    @default(0) @map("order_priority")

  @@map("team")
}

enum ProjectStatus {
  Ongoing
  Completed
}

model Project {
  id           Int            @id @default(autoincrement())
  title        String
  slug         String         @unique
  clientId     Int?           @map("client_id")
  serviceId    Int?           @map("service_id")
  description  String?        @db.Text
  projectDate  DateTime?      @db.Date @map("project_date")
  thumbnailUrl String?        @map("thumbnail_url")
  status       ProjectStatus? @default(Completed)
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @default(now()) @updatedAt @map("updated_at")
  
  client       Client?        @relation(fields: [clientId], references: [id])
  service      Service?       @relation(fields: [serviceId], references: [id])
  images       ProjectImage[]

  @@map("projects")
}

model ProjectImage {
  id        Int      @id @default(autoincrement())
  projectId Int?     @map("project_id")
  imageUrl  String   @map("image_url")
  caption   String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_images")
}
